# Flask应用配置
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/dota_analysis
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/dota_analysis_dev

# Redis配置
REDIS_URL=redis://localhost:6379/0

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key

# CORS配置
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://localhost:3000

# 外部API密钥
OPENDOTA_API_KEY=your-opendota-api-key
STRATZ_API_KEY=your-stratz-api-key
STEAM_API_KEY=your-steam-api-key

# 邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# 监控配置
SENTRY_DSN=your-sentry-dsn

# 限流配置
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
